{
  "name": "next.js-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "8.5.0",
    "leader-line-new": "^1.1.9",
    "next": "13.0.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-draggable": "^4.4.5",
    "react-xarrows": "^2.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "14.0.0",
    "@types/jest": "27.5.2",
    "@types/node": "18.16.19",
    "@types/react": "18.0.28",
    "eslint": "8.44.0",
    "eslint-config-next": "13.0.6",
    "husky": "8.0.3",
    "jest": "27.5.1",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "stylelint": "15.9.0",
    "stylelint-config-recommended-scss": "12.0.0",
    "stylelint-scss": "5.0.1",
    "ts-jest": "27.1.5",
    "typescript": "5.1.6"
  }
}
