{
  "name": "next.js-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "eslint-config-prettier": "8.5.0",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-xarrows": "^2.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "13.3.0",
    "@types/jest": "27.5.2",
    "@types/node": "16.11.56",
    "@types/react": "18.0.17",
    "eslint": "8.22.0",
    "eslint-config-next": "12.1.6",
    "husky": "8.0.1",
    "jest": "27.5.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "stylelint": "14.11.0",
    "stylelint-config-recommended-scss": "7.0.0",
    "stylelint-scss": "4.3.0",
    "ts-jest": "27.1.5",
    "typescript": "4.8.2"
  }
}
